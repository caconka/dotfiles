root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailling_whitespace = true
max_line_length = 120

[*.{c,cpp,h,hpp,cc}]
indent_style = tab
tab_width = 4
max_line_length = 80

[*.{java,scala,py,rb,go}]
indent_style = tab
tab_width = 4

[*.{html,css,json,js,jsx,ts,tsx,yml,yaml}]
indent_style = space
indent_style = 2
