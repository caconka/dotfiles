root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailling_whitespace = true

[*.{c,cpp,h,hpp,cc}]
indent_style = tab
tab_width = 4
max_line_length = 79

[*.java]
indent_style = tab
tab_width = 4
max_line_length = 119

[*.{html,css,js,jsx,ts,tsx}]
indent_style = space
indent_style = 2

[*.{yml,yaml}]
indent_style = space
indent_style = 2
