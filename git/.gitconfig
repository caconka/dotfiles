[user]
	email = carloscabezascontra@gmail.com
	name = Carlos Cabezas
[pull]
	rebase = true
	ff = only
[alias]
	lod = log --graph --decorate --pretty=format:'%C(bold yellow)%h %Creset%ad - %s  %Cblue<%an> %C(red)%D' \
		--abbrev-commit --date=format:'%Y.%m.%d %H:%M'
	sc = show --name-only
	unstage = reset HEAD --
	st = status -sb
	com = commit -m
	ch = checkout
	poh = push origin HEAD
	plob = !git pull origin $(git branch --show-current)
	cleanup = !git fetch -p && git branch -vv | grep -v '*' | grep -v 'origin' | awk '{print $1}' | \
		grep -v 'master|main' | xargs git branch -D && git prune
	master = !git checkout master && git pull origin master
	main = !git checkout main && git pull origin main
[core]
	excludesfile = ~/.gitignore_global
	editor = vim --noplugin
[diff "sopsdiffer"]
	textconv = sops -d
[color]
	ui = auto
[color "branch"]
	remote = magenta
[color "status"]
	changed = magenta
