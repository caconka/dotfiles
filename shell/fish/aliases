##### ALIASES #####

if test "$OSTYPE" = "linux-gnu"
	abbr -a open 'xdg-open'
	abbr -a myip "ip addr show | grep 'inet 192' | awk '{ print \$2}'"
end

abbr -a ll 'eza -lg --icons auto'
abbr -a llt 'eza -lg --icons auto --tree --level 2'
abbr -a lla 'eza -lg --icons auto -a'
abbr -a llta 'eza -lg --icons auto --tree --level 2 -a'
abbr -a grep 'grep --color'

# nvim
abbr -a v 'nvim'

# git
abbr -a g 'git'

# navigation
abbr -a dotfiles 'cd ~/.dotfiles'
abbr -a notes 'cd ~/notes'

# docker
abbr -a d 'docker'
abbr -a docker-compose 'docker compose'
abbr -a dstop 'docker stop (docker ps -aq)'
abbr -a dkill 'docker kill (docker ps -aq)'
abbr -a drm 'docker rm (docker ps -aq)'
abbr -a drmi 'docker rmi (docker images -q)'

# podman
abbr -a p 'podman'
abbr -a pstop 'podman stop (podman ps -aq)'
abbr -a pkill 'podman kill (podman ps -q)'
abbr -a prm 'podman rm (podman ps -aq)'
abbr -a prmi 'podman rmi (podman images -q)'

# kubernetes
abbr -a k 'kubectl'
abbr -a kx 'kubectl ctx'
abbr -a ks 'kubectl ns'

# bazel
abbr -a bazel 'bazelisk'
abbr -a bz 'bazelisk'

# maven
abbr -a mvn-dev 'mvn clean package -Dmaven.test.skip && java -jar target/*-fat.jar'

# task
abbr -a task 'go-task'

# github copilot
abbr -a cs 'gh copilot suggest'
abbr -a ce 'gh copilot explain'
