##### Alias #####

alias ll="eza -lg --icons auto"
alias llt="ll --tree --level=2"
alias lla="ll -a"
alias llta="llt -a"
alias grep="grep --color"

# ctags
alias ctagsjava="ctags -R --tag-relative=yes --exclude=.git"

# nvim
alias v="nvim"

# git
alias g="git"

# navigation
alias dotfiles="cd ~/.dotfiles"
alias notes="cd ~/notes"

# docker
# alias docker=podman
alias d="docker"
alias docker-compose="docker compose"

# kubernetes
alias k=kubectl
alias kx=kubectx
alias ks=kubens

# masmovil
alias kxd="kubectx gke_mm-k8s-dev-01_europe-southwest1_mm-k8s-dev-eusw1-01"
