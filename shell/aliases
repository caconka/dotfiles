##### Alias #####

# sudo
alias sudo="sudo "

alias ll="eza -lg --icons"
alias llt="ll --tree --level=2"
alias lla="ll -a"
alias llta="llt -a"
alias grep="grep --color"

# temperatures
alias temps="paste <(cat /sys/class/thermal/thermal_zone*/type) <(cat /sys/class/thermal/thermal_zone*/temp) | column -s $'\t' -t | sed 's/\(.\)..$/.\1Â°C/'"

# ctags
alias ctagsjava="ctags -R --tag-relative=yes --exclude=.git"

# nvim
alias vim="nvim"

# navigation
alias dotfiles="cd ~/.dotfiles"

# docker
# alias docker=podman
# alias docker-compose=podman-compose
alias docker-stop="docker-list stop ps"
alias docker-rm="docker-list rm ps"
alias docker-rmi="docker-list rmi images"

# kubernetes
alias k=kubectl

# bazel
alias bz=bazel

# maven
alias mvn-dev="mvn clean package -Dmaven.test.skip && java -jar target/*-fat.jar"

# masmovil
alias k8s="cd ~/code/masmovil/kubernetes-clusters/"
alias mm="cd ~/code/masmovil/mm-monorepo/"
alias msubs="cd ~/code/masmovil/mm-monorepo/pkg/mas-stack/bss/mas-subscriptions/"
alias mcat="cd ~/code/masmovil/mm-monorepo/pkg/mas-stack/bss/mas-catalogue/"
alias wfsel=mm-msubs-wf-selector.sh
alias wftest=mm-msubs-wf-tester.sh

# LINUX
if [[ "$OSTYPE" == "linux-gnu" ]]; then
	alias open="xdg-open"
	alias myip="ip addr show | grep 'inet 192' | awk '{ print \$2}'"
	alias idea="nohup ~/.local/share/JetBrains/Toolbox/apps/intellij-idea-community-edition/bin/idea.sh > /dev/null & "
fi
